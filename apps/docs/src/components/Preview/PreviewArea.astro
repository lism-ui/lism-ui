---
import { Lism, Layer, Icon } from '@lism-ui/astro';
import { ArrowDownRight } from '@phosphor-icons/react';

// Propsの定義
interface Props {
	as?: any;
	tag?: string;
}
const {
	resize,
	nogrid = false,
	bg = 'u:grid',
	isFlow = true,
	p = '5',
	...props
} = Astro.props || {};

const lismState = [];
if (resize) lismState.push('is--resize');
---

<Lism className='c--preview_area'>
	<Lism
		className='c--preview_inner'
		lismState={lismState}
		isFlow={isFlow}
		bg={!nogrid && bg}
		p={p}
		bxsh='-1'
		{...props}
	>
		<slot />
		{
			resize && (
				<Lism className='c--preview_help -pos:a -b:0 -r:0 -d:f -lh:1 -p:em4 -gap:em3 -bdrs:xs'>
					リサイズ可能 <Icon as={ArrowDownRight} weight='fill' />
				</Lism>
			)
		}
	</Lism>
</Lism>
