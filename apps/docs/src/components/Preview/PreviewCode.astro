---
import { TabItem, Lism } from '@lism-ui/astro';

// Propsの定義
interface Props {
    label?: string;
    [prop: string]: any;
}
const { label, ...props } = Astro.props || {};
---

{
    label && (
        <TabItem label={label} {...props}>
            <slot />
        </TabItem>
    )
}
{
    !label && (
        <Lism className='c--preview_code' {...props}>
            <slot />
        </Lism>
    )
}
