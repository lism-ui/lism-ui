---
import { Tabs, Lism } from '@lism-ui/astro';

// Propsの定義
interface Props {
	label?: string;
	[prop: string]: any;
}
const { label, ...props } = Astro.props || {};
---

{
	label && (
		<Tabs.Item label={label} {...props}>
			<slot />
		</Tabs.Item>
	)
}
{
	!label && (
		<Lism className='c--preview_code' {...props}>
			<slot />
		</Lism>
	)
}
