---
import { Tabs, Lism } from '@lism-ui/astro';

// Propsの定義
interface Props {
	label?: string;
	[prop: string]: any;
}
const { label, ...props } = Astro.props || {};
---

<>
	{
		label ? (
			<Tabs.Item {...props}>
				<Tabs.Tab>{label}</Tabs.Tab>
				<Tabs.Panel>
					<slot />
				</Tabs.Panel>
			</Tabs.Item>
		) : (
			<Lism className='c--preview_code' {...props}>
				<slot />
			</Lism>
		)
	}
</>
