---
import { Lism, WithSide, Center, Icon } from '@lism-ui/astro';
import PRESETS from './presets';

const { type = 'alert', keycolor, icon, isFlow, ...props } = Astro.props;

const presetData = type && PRESETS[type as keyof typeof PRESETS];
const _icon = icon || presetData?.icon || 'info';
const _color = keycolor || presetData?.color || 'currentColor';
---

<WithSide lismClass='c--callout' isColored keycolor={_color} p='20' g='20' bd bdrs='2' {...props}>
	<Center isSide lismClass='c--callout__icon' c='keycolor' fz='xl' p='5'>
		<Icon icon={_icon} />
	</Center>
	<Lism lismClass='c--callout__body' isFlow={isFlow}>
		<slot />
	</Lism>
</WithSide>
