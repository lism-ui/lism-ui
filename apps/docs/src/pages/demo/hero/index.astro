---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';
import {
	Lism,
	Media,
	Spacer,
	Box,
	Grid,
	DammyText,
	Text,
	Container,
	Layer,
	Stack,
	FlexItem,
	Center,
	ShapeDivider,
} from '@lism-ui/astro';

// import './style.scss';
---

<DemoPageLayout>
	<Lism isFlow hasGutter py={50} isContainer='s' isFullwide id='demo-wrapper' _dir='rtl'>
		<Stack isFullwide minH='50vh' bgc='base-2'>
			<Container size='m' hasGutter isFlow my='auto' bd='guide'>
				<Text fw='bold' fz='xl'>DEMO 01</Text>
				<DammyText length='l' lang='ja' />
			</Container>
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide minH='50vh' bgc='base-2' g='30'>
			<Box bd='guide' ta='c'>Header</Box>
			<Container size='m' hasGutter isFlow my='auto' bd='guide'>
				<Text fw='bold' fz='xl'>DEMO 02</Text>
				<DammyText length='l' />
			</Container>
			<Box bd='guide' ta='c'>Footer</Box>
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide h='full' bgc='base-2' g='30'>
			<Container size='m' hasGutter isFlow my='auto' bd='guide'>
				<Text fw='bold' fz='xl'>Full Screen</Text>
				<DammyText length='xl' />
			</Container>
			<Box bd='guide' ta='c'>Footer</Box>
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide minH='50vh' bgc='base-3'>
			<ShapeDivider shape='wave3' c='base' isFlip />
			<Container size='m' hasGutter isFlow my='auto'>
				<Text fw='bold' fz='xl'>With ShapeDivider</Text>
				<DammyText length='l' />
			</Container>
			<ShapeDivider shape='wave3' c='base' />
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide isFrame minH='50vh'>
			<Media isLayer src='/img.jpg' alt='' width='960' height='640' />
			<Layer blur='4px' bgc='black:50%' />
			<Container size='m' hasGutter isFlow my='auto' c='white' z='0'>
				<Text fw='bold' fz='xl'>With Layers</Text>
				<DammyText length='l' />
			</Container>
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide isFrame minH='50vh' c='white' g='20'>
			<Media isLayer src='/img.jpg' alt='' width='960' height='640' />
			<Layer blur='4px' bgc='black:50%' />
			<ShapeDivider shape='slope2' c='base' isFlip />
			<Container size='m' hasGutter isFlow my='auto' z='0'>
				<Text fw='bold' fz='xl'>With ShapDivide & Layers</Text>
				<DammyText length='l' />
			</Container>
			<Box z='0' ta='c'>Footer</Box>
			<ShapeDivider shape='slope2' c='base' />
		</Stack>
		<Spacer bg='stripe' h='60' />
		<Stack isFullwide isFrame minH='50vh'>
			<Media isLayer src='/img.jpg' alt='' width='960' height='640' />
			<Layer bgc='black:20%' />
			<FlexItem layout={Grid} fxg='1' ai='c' hasGutter>
				<Center minH='50%' bg='glass' p='box' c='white' bdrs='s' g={20}>
					<Text fw='bold' fz='xl'>min-height 50%</Text>
					<DammyText length='l' />
				</Center>
			</FlexItem>
		</Stack>
		<Spacer bg='stripe' h='60' />
		<!-- <Spacer bg='stripe' h='60' />
		<Spacer bg='stripe' h='60' /> -->
	</Lism>
</DemoPageLayout>
