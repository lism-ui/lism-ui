---
import {
	Container,
	Lism,
	Link,
	Flex,
	Stack,
	Center,
	Icon,
	Dummy,
	Text,
	Modal,
} from '@lism-ui/astro';
---

<Container tag='header' size='m' py='30' hasGutter bxsh='1'>
	<Flex jc='sb' ai='c' g='20'>
		<Lism fz='xl' ff='mono'>Lism UI</Lism>
		<Flex mis='auto' g='20' d={['none', null, 'flex']}>
			<Link href='###' hov='fade' c='inherit' td='n'>Menu 1</Link>
			<Link href='###' hov='fade' c='inherit' td='n'>Menu 2</Link>
			<Link href='###' hov='fade' c='inherit' td='n'>Menu 3</Link>
		</Flex>
		<Center
			d={['grid', null, 'none']}
			tag='button'
			fz='xl'
			className='reset--style'
			data-modal-open='modal-01'
		>
			<Icon icon='menu' fz='l' />
		</Center>
	</Flex>
	<Modal.Root id='modal-01' p='40' style={{ '--offset': '0 100px' }}>
		<Modal.Inner maxW='m' m='a' p='40' g='30' bdrs='3' bxsh='4'>
			<Center pos='a' t='0' r='0' z='1' fz='xl' p='20' m='20' bdrs='99'>
				<Modal.CloseIconBtn modalId='modal-01' />
			</Center>
			<Modal.Header>
				<Text fz='l' fw='bold' lh='s'>Menus</Text>
			</Modal.Header>
			<Modal.Body isFlow>
				<Stack g='20' hasDivider>
					<Link href='###' p='10' td='n'>Menu 1</Link>
					<Link href='###' p='10' td='n'>Menu 2</Link>
					<Link href='###' p='10' td='n'>Menu 3</Link>
				</Stack>
			</Modal.Body>
			<Modal.Footer d='f' jc='e'>
				<Lism tag='button' data-modal-close='modal-01' bd='none' p='20' lh='xs' bdrs='2'
					>Close</Lism
				>
			</Modal.Footer>
		</Modal.Inner>
	</Modal.Root>
</Container>
