---
import { LismProps } from '../types';
import { FlexItem } from '../Flex';
import { Icon } from '../Icon';
import { getAccIconProps } from '@lism-ui/core/components/Accordion/getProps';

// Propsの定義
interface Props extends LismProps {
	icon?: string;
	size?: string;
	iconProps?: Object;
}

const { viewBox, icon = 'caret-down', ...props } = Astro.props || {};
---

<FlexItem {...getAccIconProps(props)}>
	{Astro.slots.has('default') ? <slot /> : <Icon viewBox={viewBox} icon={icon} />}
</FlexItem>
