---
import { LismProps } from '../types';
import { getLismProps } from '@lism-ui/core/lib';
import { getAccProps } from '@lism-ui/core/raw/Accordion/getProps';

// Propsの定義
interface Props extends LismProps {
    duration?: string | number;
}
const props = Astro.props || {};
---

<details {...getLismProps(getAccProps(props))}>
    <slot />
</details>

<script>
    // import setEvent from './setEvent';
    import setEvent from '@lism-ui/core/raw/Accordion/setEvent';
    const accs = document.querySelectorAll('.c--accordion');
    accs.forEach((acc) => {
        setEvent(acc);
    });
</script>
