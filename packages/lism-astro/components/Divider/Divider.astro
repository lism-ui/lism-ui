---
import { LismProps } from '../types';
import { Flex, FlexItem } from '../Flex';
import { Lism } from '../Lism';
import { getDividerProps } from '@lism-ui/core/components/Divider/getProps';

// Propsの定義
interface Props extends LismProps {}

const props = Astro.props || {};
const { label } = props;
const { dividerProps, labelProps, bdProps } = getDividerProps(props);
---

<Flex {...dividerProps}>
	{
		label ? (
			<>
				<FlexItem {...bdProps} />
				<Lism {...labelProps}>{label}</Lism>
				<FlexItem {...bdProps} />
			</>
		) : (
			<FlexItem {...bdProps} />
		)
	}
</Flex>
