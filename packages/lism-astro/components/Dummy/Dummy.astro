---
import { LismProps } from '../types';
import { Lism } from '../Lism';
import getContent from '@lism-ui/core/components/Dummy/getContent';

// Propsの定義
interface Props extends LismProps {}
const { tag = 'p', length = 'm', lang = 'en', offset = 0, ...props } = Astro.props || {};
const content = getContent({ tag, lang, length, offset });
---

<Lism tag={tag} {...props} set:html={content} />
