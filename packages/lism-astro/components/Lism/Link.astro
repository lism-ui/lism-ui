---
import { LismProps } from '../types';
import getLismProps from '@lism-ui/core/lib/getLismProps';
import separateLinkProps from '@lism-ui/core/components/separateLinkProps';

// Propsの定義
interface Props extends LismProps {}
const { as, asProps, ...props } = Astro.props || {};

const { linkProps, otherProps } = separateLinkProps(props);
const lismProps = getLismProps(otherProps, { hov: 'fade' });
const JSX = as || 'a';
---

<JSX {...linkProps} {...lismProps} {...asProps}>
	<slot />
</JSX>
