---
import { LismProps } from '../types';
import { Stack } from '../Stack';
import { Flex } from '../Flex';
import { getNavMenuProps } from '@lism-ui/core/components/NavMenu/getProps';

// Propsの定義
interface Props extends LismProps {}

const { isFlex, ...props } = Astro.props || {};
const JSX = isFlex ? Flex : Stack;
---

<JSX {...getNavMenuProps(props)} {...props}>
	<slot />
</JSX>
