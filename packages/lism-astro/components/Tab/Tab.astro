---
import { LismProps } from '../types';
import { FlexItem } from '../Flex';
import { getTabProps } from '@lism-ui/core/components/Tabs/getProps';

export interface Props extends LismProps {
	// controlId: string;
	isActive?: boolean;
	tabID?: string | number;
	index?: number;
}
const { tabID = '', index = 0, isActive, ...props } = Astro.props;
const controlId = `${tabID}-${index}`;
---

<FlexItem aria-controls={controlId} {...getTabProps(props, isActive)}>
	<slot />
</FlexItem>
