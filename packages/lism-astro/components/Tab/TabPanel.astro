---
import { LismProps } from '../types';
import { GridItem } from '../Grid';
import { getTabPanelProps } from '@lism-ui/core/components/Tabs/getProps';

export interface Props extends LismProps {
	isActive?: boolean;
	tabID?: string | number;
	index?: number;
}
const { tabID = '', index = 0, isActive, ...props } = Astro.props;
const controlId = `${tabID}-${index}`;
---

<GridItem id={controlId} {...getTabPanelProps(props, isActive)}>
	<slot />
</GridItem>
