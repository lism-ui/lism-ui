---
import { LismProps } from '../types';
import { Lism } from '../Lism';
import { Icon } from '../Icon';
import getProps from '@lism-ui/core/components/Badge/getProps';

// Propsの定義
interface Props extends LismProps {}
const { icon, ...props } = Astro.props || {};
---

<Lism {...getProps(props)}>
	{icon && <Icon icon={icon} variant='inline' />}<slot />
</Lism>
